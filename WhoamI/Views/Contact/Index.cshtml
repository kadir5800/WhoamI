
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cavani_tm_section" id="contact">
    <div class="section_inner">
        <div class="cavani_tm_contact w-full h-auto clear-both float-left mb-[100px]">
            <div class="cavani_tm_title w-full h-auto clear-both float-left overflow-hidden">
                <span class="inline-block relative font-poppins text-[#333] uppercase font-bold tracking-[8px]">Get in Touch</span>
            </div>
            <div class="short_info w-full h-auto clear-both float-left mt-[62px]">
                <ul class="ml-[-30px] flex flex-wrap">
                    <li class="mb-[30px] w-1/3 pl-[30px]">
                        <div class="list_inner w-full h-auto clear-both float-left relative border-solid border-[rgba(0,0,0,.07)] border text-center py-[32px] px-[25px]">
                            <img class="svg inline-block w-[18px] h-[18px] mb-[10px]" src="~/assets/img/svg/location.svg" alt />
                            <span class="block">Ave Street, New York, USA</span>
                        </div>
                    </li>
                    <li class="mb-[30px] w-1/3 pl-[30px]">
                        <div class="list_inner w-full h-auto clear-both float-left relative border-solid border-[rgba(0,0,0,.07)] border text-center py-[32px] px-[25px]">
                            <img class="svg inline-block w-[18px] h-[18px] mb-[10px]" src="~/assets/img/svg/mail.svg" alt />
                            <span class="block"><a class="text-[#7d7789] transition-all duration-300 hover:text-[#333]" href="#"><span class="__cf_email__" data-cfemail="731b161f1f1c33101205121d1a5d101c1e">[email&#160;protected]</span></a></span>
                        </div>
                    </li>
                    <li class="mb-[30px] w-1/3 pl-[30px]">
                        <div class="list_inner w-full h-auto clear-both float-left relative border-solid border-[rgba(0,0,0,.07)] border text-center py-[32px] px-[25px]">
                            <img class="svg inline-block w-[18px] h-[18px] mb-[10px]" src="~/assets/img/svg/call.svg" alt />
                            <span class="block">+77 022 444 05 05</span>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="form w-full h-auto clear-both flex">
                <div class="left w-1/2 pr-[15px]">
                    <div class="fields w-full h-auto clear-both float-left">
                        <form action="https://marketifythemes.net/" method="post" class="contact_form" id="contact_form">
                            <div class="returnmessage" data-success="Your message has been received, We will contact you soon."></div>
                            <div class="empty_notice"><span>Please Fill Required Fields</span></div>
                            <div class="first w-full float-left">
                                <ul>
                                    <li class="w-full mb-[30px] float-left">
                                        <input id="name" type="text" placeholder="Name" autocomplete="off">
                                    </li>
                                    <li class="w-full mb-[30px] float-left">
                                        <input id="email" type="text" placeholder="Email" autocomplete="off">
                                    </li>
                                </ul>
                            </div>
                            <div class="last">
<textarea id="message" placeholder="Message"></textarea>
                            </div>
                            <div class="cavani_tm_button">
                                <a id="send_message" href="#">Send Message</a>
                            </div>

                        </form>
                    </div>
                </div>
                <div class="right w-1/2 pl-[15px] relative">
                    <div class="map_wrap">
                        <div class="mapouter">
                            <div class="gmap_canvas">
                                <iframe width="100%" height="355" id="gmap_canvas" src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&amp;t=&amp;z=13&amp;ie=UTF8&amp;iwloc=&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://fmovies-online.net/">fmovies</a><br>
                                <style>
                                    .mapouter {
                                        position: relative;
                                        text-align: right;
                                        height: 355px;
                                        width: 100%;
                                    }
                                </style><a href="https://www.embedgooglemap.net/">embedgooglemap.net</a>
                                <style>
                                    .gmap_canvas {
                                        overflow: hidden;
                                        background: none !important;
                                        height: 355px;
                                        width: 100%;
                                    }
                                </style>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>